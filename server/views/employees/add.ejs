<%- include ../partials/header.ejs %>

<!-- Content  for the add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%=title %></h1>

      <form class="form" method="post">
        <div class="from-group">
          <label for="idTextField">Employee id</label>
          <input
            type="number"
            class="form-control"
            id="idTextField"
            placeholder="Enter the employee id:"
            name="Employeeid"
            required/>
        </div>

        <div class="from-group">
          <label for="NameTextField">Employee Name</label>
          <input
            type="text"
            class="form-control"
            id="NameTextField"
            placeholder="Enter the employee's name:"
            name="Employeename"
            required/>
        </div>

        <div class="from-group">
          <label for="DepartmentTextField">Department</label>
          <input
            type="text"
            class="form-control"
            id="DepartmentTextField"
            placeholder="Enter the employee's department:"
            name="Department"
            required/>
        </div>

        <div class="from-group">
          <label for="DesgTextField">Designation</label>
          <textarea
            type="text"
            class="form-control"
            id="DesgTextField"
            placeholder="Enter the employee's designation:"
            name="Designation"
            required></textarea>
        </div>

        <div class="from-group">
          <label for="SalaryTextField">Salary</label>
          <input
            type="number"
            class="form-control"
            id="SalaryTextField"
            placeholder="Enter the employee's salary:"
            name="Salary"
            required/>
        </div>

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i>Submit
        </button>

        <a href="/employees" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
      </form>
    </div>
  </div>
</div>

<%- include ../partials/footer.ejs %>
